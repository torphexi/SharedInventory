# Build stage
FROM node:20-alpine as build
WORKDIR /app
COPY frontend/app/package*.json ./
RUN npm install
COPY frontend/app/ .
RUN npm run build

# Production stage
FROM nginx:alpine
COPY --from=build /app/dist/app/browser/ /usr/share/nginx/html/
COPY frontend/app/nginx.conf /etc/nginx/conf.d/default.conf
EXPOSE 80
